# 响应双击事件的
def playActive(self):
    global playing,one_start,num
    if not one_start:
        playing = False
        pygame.mixer.init()
        pygame.mixer.music.stop()

        nextMusic = lb.get('active')
        temp_list = [nextMusic]
        current_index = ret.index(temp_list)
        num = current_index

        playing = True
        # 创建线程播放音乐
        t = threading.Thread(target=play)
        t.start()

