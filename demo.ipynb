# 关闭窗口

def closeWindow():
    global playing
    playing = False
    time.sleep(0.3)
    try:
        # 停止播放，如果已经停止
        
        # 再次停止时会抛出异常，所以需要异常捕获
        pygame.mixer.music.stop()
        

    except:
        pass
    root.destroy() # 整个界面退出

def play_many():
    if pause_re.get()  == '循环播放' :
        pause_re.set('取消')
        pygame.mixer.music.play(-1)
        
    elif pause_re.get() == '取消':
        pygame.mixer.music.play(1)
        pause_re.set('循环播放')


